<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/widget_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/appwidget_text"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/widget_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_main_text"
        android:layout_alignStart="@+id/widget_main_text"
        android:layout_alignEnd="@+id/widget_main_text"
        android:layout_marginTop="8dp"
        />

    <TextView
        android:id="@+id/widget_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widget_change"
        android:layout_alignStart="@+id/widget_change"
        android:layout_alignEnd="@+id/widget_change"
        android:layout_marginTop="4dp"
        />

</RelativeLayout>